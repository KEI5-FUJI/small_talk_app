<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
    <%= render 'follow_form' if logged_in? %>
  </aside>
    <div class="col-md-8">
      <% if @user.tasks.any? %>
      <h3>投稿一覧 (<%= @user.tasks.count %>)</h3>
      <ol class="tasks">
        <%= render @tasks %>
      </ol>
      <% end %>
    </div>
</div>