<% provide(:title, "users") %>
<h1>フォロー中ユーザー</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user?(user) %>
         | <%= link_to "削除", user, method: :delete, data: { confirm: "ユーザーを削除してもよろしいですか?" } %>
      <% end %>
    </li>
  <% end %>
</ul>